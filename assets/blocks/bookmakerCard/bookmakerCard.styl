@import '../../css/_vars'
.bookmakerCard
	&__img
		width: 100%
		margin-bottom: 25px
	&__payment
		width: 100%
		td
			width: 25%
			padding: 2px
	&__paymentLink
		border: 1px solid #d4d4d4
		display: inline-block
		padding: 1px
		border-radius: 3px
		width: 100%
		img
			width: 100%
		&:hover
			opacity: 0.7
	&__info
		table
			width: 100%
			margin-top: -8px
			@media (max-width: $screen-xs-min)
				margin-top: 20px
			td
				width: 50%
				padding: 8px 0
				@media (max-width: $screen-xs-min)
					&:first-child
						position: relative
						padding-left: 30px
	&__btnWrap
		justify-content: space-between
		display: flex
	&__btn
		font-weight: 600
		color: #fff
		padding: 10px
		margin-bottom: 20px
		max-width: 49%
		flex: 0 1 49%
		&.btn-more
			color: $color_1
			background: #333
		&.btn-site
			background: $color_1
			color: #fff
		&:hover
			opacity: 0.7
	&__infoItem
		a
			color: $base_text
			&:hover, &:focus
				color: $base_text
		.fa
			&:before
				display: inline-block
				margin-right: 20px
			&.fa-apple, &.fa-android, &.fa-windows, &.fa-edge
				color: $color_1
				font-size: 18px
				&:before
					margin-right: 10px
	&__infoItem__stars
		display: inline-block
		margin-left: 10px
		.fa-star
			&:before
				margin-right: 5px
				color: $color_stars
	&__infoItem__dt
		font-weight: 600
	.footable
		.footable-row-detail-name
			text-align: left
			padding: 0
		.footable-toggle
			position: absolute
			left: 0
		.footable-row-detail-inner
			width: 100%

.no-flexbox
	.bookmakerCard__btn
		width: 49%
		&.btn-site
			float: right

