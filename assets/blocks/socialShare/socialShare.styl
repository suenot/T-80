@import '../../css/_vars'
.socialShare
	text-align: right
	@media (max-width: $screen-xs-min)
		text-align: center
	&__title
		padding-right: 25px
		@media (max-width: $screen-xs-min)
			display: block
			margin-bottom: 10px
			padding: 0
	&__link
		color: #fff
		width: 32px
		height: 32px
		padding: 10px 0
		font-size: 17px
		text-align: center
		margin-left: 5px
		text-decoration: none
		&:first-child
			margin-left: 0
		&.fa-facebook
			background: #507cbe
		&.fa-twitter
			background: #63cdf1
		&.fa-vk
			background: #597b9f
		&.fa-tumblr
			background: #333
		&.fa-plus
			background: #fc6d4c
		&:hover
			color: #fff
			text-decoration: none
			opacity: 0.7