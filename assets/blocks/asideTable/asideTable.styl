@import '../../css/_vars'
.asideTable
	margin-bottom: 15px
	&__head
		background: $color_1
		color: #fff
		font-weight: 600
		padding: 12px 5px
		text-align: center
	&__item
		height: 50px
		background: $bg_color_1
		border-top: 1px solid #fff
		display: flex
		align-items: center
		@media (max-width: $screen-xs-min)
			height: 80px
	&__body
		&.classA
			.asideTable__itemClass
				background: $color_1
		&.classB
			.asideTable__itemClass
				background: $color_2
	&__itemClass
		height: 49px
		width: 42px
		color: #fff
		padding: 14px
		text-align: center
		float: left
		@media (max-width: $screen-xs-min)
			height: 79px
	&__itemLogo
		flex: 1 0 auto
		position: relative
		text-align: center
		@media (max-width: $screen-xs-min)
			padding: 5px
		&:hover, &:active
			img
				filter: blur(2px)
			.asideTable__itemHover
				opacity: 1
	&__itemHover
		position: absolute
		top: 50%
		left: 0
		margin-top: -25px
		width: 100%
		height: 49px
		background: rgba(175,175,175,0.8)
		// padding: 13px 5px
		opacity: 0
		transition: opacity 1s
		text-align: center
		@media (max-width: $screen-xs-min)
			position: static
			opacity: 1
			background: transparent
			padding: 5px
			margin: 0
			height: auto
	&__itemLink
		color: #fff
		text-decoration: underline
		font-size: 12px
		// margin-right: 25px
		padding: 16px 10px
		display: inline-block
		&:last-child
			margin-right: 0
		&:hover
			color: #fff
			text-decoration: none
		@media (max-width: $screen-xs-min)
			color: $base_text

.no-flexbox
	.asideTable
		&__item
			display: table
			width: 100%
		&__class
			display: table-cell
			vertical-align: middle
		&__itemLogo
			// height: 50px
			display: table-cell
			vertical-align: middle
			width: 100%
		&__itemHover
			margin: 0
			top: 0